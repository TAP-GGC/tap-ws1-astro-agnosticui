---
import TAPDefaultLayout from "../layouts/default.astro";
import TAPCalendar from "../components/TAPCalendar.vue";
import Crumbs from '../components/Crumbs.vue';
import Search from "../components/Search.vue"

import { getCollection } from 'astro:content';

const papers = (await getCollection('publications')).sort((p1,p2) => p2.data.postDate - p1.data.postDate);
---
<TAPDefaultLayout title="All TAP publications">

    <Crumbs pageType="publications" pageUrl="/publications" />

    <Search client:load eventsList={papers}/>


</TAPDefaultLayout>

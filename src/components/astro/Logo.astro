---
interface Props {
  src: string;
  alt: string;
  link: string;
  caption?: string; // Optional caption prop
}

const { src, alt, link,caption} = Astro.props;
---

<section class="logo-section">
    {link ? ( 
        <a href={link} target="blank" rel="noopener noreferrer">
            <img src={src} alt={alt} class="logo" />
        </a>
    ):(
        <img src={src} alt={alt} class="logo"/>
    )}
    {caption && <p class="caption">{caption}</p>}
</section>

<style>
    .logo-section{
        text-align: center;
        margin: 1em 0.5em;
    }
    .logo{
        width: 250px;
        height: auto;
    }
    .caption {
        font-size: 1em;
        margin-top: 0.5em;
    }
</style>

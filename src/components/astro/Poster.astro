---
interface Props {
  src: string;
  alt: string;
  link: string;
  caption?: string; // Optional caption prop
}
const { src, alt, link,caption} = Astro.props;
---

<section class="photo-section">
    {link ? ( 
        <a href={link} target="blank" rel="noopener noreferrer">
            <img src={src} alt={alt} class="photo" />
        </a>
    ):(
        <a href={src}>
        <img src={src} alt={alt} class="photo"/>
        </a>
    )}
    {caption && <p class="caption">{caption}</p>}
</section>

<style>
    .photo-section{
        text-align: center;
        margin: 1em auto;
    }
    .photo{
        max-width: 1150px;
        min-width: 750px;
        height: auto;
        transition: transform 0.05s ease-in-out;

    }
    .caption {
        font-size: clamp(0.875rem, 1vw + 0.5rem, 1.5rem);
        margin-top: 1em;
    }
    .photo:hover{
        transform: scale(1.05);
    }

    /* Don't remove makes adjusts for mobile - was not responding to flex, will inspect later */

    @media (max-width: 885px){
        .photo{
            max-width: 700px;
            min-width: 350px;
            height: auto;
            transition: transform 0.05s ease-in-out;

        }
    }
     @media (max-width: 500px){
        .photo{
            max-width: 450px;
            height: auto;
            transition: transform 0.05s ease-in-out;

        }
    }
</style>